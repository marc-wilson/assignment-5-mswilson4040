<link rel="stylesheet" href="/stylesheets/updateuser.css" />
<section id="updateUserPage" class="container">
    <header>
        <h3>Update User</h3>
    </header>
    <main>
        <form>
            <div class="form-group">
                <label for="nameInput">Name</label>
                <input type="text" class="form-control" id="nameInput" name="name" aria-describedby="nameHelp" placeholder="Full Name" value="{{user.name}}" />
            </div>
            <div class="form-group">
                <label for="ageInput">Age</label>
                <input type="number" class="form-control" id="ageInput" name="age" placeholder="24" value="{{user.age}}">
            </div>
            <div class="form-group">
                <label for="departmentInput">Department</label>
                <input type="text" class="form-control" id="departmentInput" name="department" placeholder="Engineering" value="{{user.department}}" />
            </div>
            <div class="form-group">
                <label for="titleInput">Title</label>
                <input type="text" class="form-control" id="titleInput" name="title" placeholder="Node Engineer" value="{{user.title}}" />
            </div>
            <button id="submitButton" class="btn btn-primary" data-userid="{{user._id}}">Update</button>
        </form>
    </main>
</section>
<script src="/scripts/updateuser.js">{{!}}</script>
